<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="6"
    android:paddingTop="8dp"
    android:rowCount="1">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_columnWeight="4"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_row="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/taskTabNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/taskTabOwnerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:layout_weight="1"
                android:gravity="top|start"
                android:paddingTop="-1dp"
                android:text="TextView"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/taskTabIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_marginRight="8dp"
        android:layout_row="0"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/taskTabAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="100.00"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/taskTabEditTabImageButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/edit" />

        <ImageButton
            android:id="@+id/taskTabDeleteTabImageButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/delete_2" />
    </LinearLayout>


</GridLayout>
